generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int     @id @default(autoincrement())
  name            String
  email           String  @unique
  password        String
  phoneNumber     String  @unique
  links           Link[]
  isConfirmed     Boolean @default(false)
  isPhoneVerified Boolean @default(false)
}

